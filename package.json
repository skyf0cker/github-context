{
  "name": "github-context",
  "version": "0.0.4",
  "description": "CLI tool to fetch GitHub repository content for LLM context",
  "main": "dist/cli.js",
  "types": "dist/types/bin/cli.d.ts",
  "type": "module",
  "author": {
    "name": "14m4r",
    "email": "dev@vophan.day"
  },
  "bin": {
    "github-context": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "github",
    "cli",
    "context",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skyf0cker/github-context.git"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "gpt-tokenizer": "^2.1.1",
    "minimatch": "^9.0.3",
    "ora": "^7.0.1",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/bun": "^1.1.16",
    "@types/node": "^20.6.0",
    "prettier": "^3.4.2",
    "rollup": "^3.28.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16"
  }
}
